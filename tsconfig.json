{
  "compilerOptions": {
    "declaration": true,
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "target": "ESNext",

    /* Linting */
    "strict": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*"
  ]
}